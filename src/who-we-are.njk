---
layout: layouts/page
title: Who We Are
---

<section class="founders stack section" style="--measure: var(--max-inner-width); --pad: var(--s2);">
  <h2>Founders</h2>
  <div class="grid" style="--column-min: 22rem; --w: 1; --h: 1;">
    {%- for founder in collections.sortedFounders %}
      <div class="stack founder">
        {%-if founder.data.image -%}
          {% set altText = ["Headshot of ", founder.data.name, "."] | join %}
          {% image founder.data.image,
          altText,
          "frame" %}
        {% endif %}
        <h3>{{ founder.data.name }}
          <span class="pronouns">({{founder.data.pronouns}})</span></h3>
        <div class="bio stack">{{founder.templateContent | safe}}</div>
      </div>
    {% endfor %}
  </div>
</section>

<section class="staff stack section" style="--measure: var(--max-inner-width); --pad: var(--s2);">
  <h2>Academic Team</h2>
  <div class="grid" style="--flow-space: var(--s2); --w: 1; --h: 1;">
    {%-for staff in collections.staff-%}
      {%-if staff.data.tags.includes("academic-team")-%}
        <div class="stack" style="--flow-space: var(--s1);">
          {%-if staff.data.image -%}
            {% set altText = ["Headshot of ", staff.data.name, "."] | join %}
            {% image staff.data.image,
            altText,
            "frame" %}
          {% endif %}
          <h3>{{ staff.data.name }}</h3>
          {%-if staff.templateContent -%}
            <read-more class="stack">
              {{ staff.templateContent | safe }}
            </read-more>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

<section class="staff stack section" style="--measure: var(--max-inner-width); --pad: var(--s2);">
  <h2>Marketing Team</h2>
  <div class="grid" style="--flow-space: var(--s2); --w: 1; --h: 1;">
    {%-for staff in collections.staff-%}
      {%-if staff.data.tags.includes("marketing-team")-%}
        <div class="stack" style="--flow-space: var(--s1);">
          {%-if staff.data.image -%}
            {% set altText = ["Headshot of ", staff.data.name, "."] | join %}
            {% image staff.data.image,
            altText,
            "frame" %}
          {% else %}
            {% set altText = ["Silhouetted placeholder image of a person for ", staff.data.name, "."] | join %}
            {% image "/images/passthrough/placeholder.jpeg",
            altText,
            "frame" %}
          {% endif %}
          <h3>{{ staff.data.name }}</h3>
          {%-if staff.templateContent -%}
            <read-more class="stack">
              {{ staff.templateContent | safe }}
            </read-more>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>