---
layout: layouts/page
title: Our Students
---
<section class="students stack" style="--measure: var(--max-inner-width);">
  <h2>Our Students</h2>
  <div class="grid" style="--column: 40ch;">
    {%- for student in students %}
      <div class="student stack" style="--w: 3; --h: 5;">
        {% set imagePath = [
          "/images/students/",
          (student.name | slug),
          ".jpeg"
        ] | join %}
        {% set altText = ["Headshot of ", student.name] | join %}

        {% image imagePath,
        altText,
        "frame" %}
        <h3>{{ student.name }}</h3>
        <div class="student__bio accordion stack">
          {{ student.bio | safe }}
          <button class="accordion__button">More [+]</button>
        </div>
      </div>
    {% endfor %}
  </div>
</section>